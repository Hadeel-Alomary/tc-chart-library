{
  "compilerOptions": {
    "lib": ["es7", "dom", "es2017"],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": false,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
    "sourceMap": true,
    "newLine": "lf",
    "outDir": "dist",
    "rootDir": "src",

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
