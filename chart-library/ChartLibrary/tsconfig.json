{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "typeRoots": [
      "./src/typings"
    ],
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": false,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "newLine": "lf",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "checkJs": false,
    "paths": {
      "@src/*": ["src/*"]
    },
    "types": [
      "node",
      "jquery",
      "bootstrap",
      "jqueryui",
      "spectrum",
      "Html2Canvas",
      "bootstrap-select",
      "eonasdan-bootstrap-datetimepicker",
      "lodash",
      "switchery",
      "moment",
      "detectizr",
      "jquery.gwfselect",
      "jquery.autocolumnlist",
      "tinycolor",
      "base64",
      "prng4",
      "rng",
      "rsa",
      "jsbn"
    ]
  },
  "include": ["src/**/*.ts"]
}
